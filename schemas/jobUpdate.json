{
    "$schema": "http://json-schema.org/draft-07/schema#",
    "$id": "http://our.job.com/jobUpdate.schema.json",
    "type": "object",
    "properties": {
        "title": {
          "type": "string",
          "minLength": 1,
          "maxLength": 10
        },
        "salary": {
          "type": "integer"
        },
        "equity": {
          "type": "integer",
          "minimum": 0,
          "maximum": 1.0
        },
        "company_handle": {
          "type": "string",
          "format": "uri"
        }
      },
      "additionalProperties": false,
    "required": []
  }